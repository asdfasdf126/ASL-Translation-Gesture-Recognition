<Window x:Class="SeniorProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeniorProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" SizeChanged="colorImage_UpdateSize" KeyDown="Window_KeyDown">
    <Grid>
        <Image x:Name="colorImage" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517" Source="{Binding ImageSource}" Loaded="colorImage_UpdateSize"/>
        <TextBlock x:Name="tbWords" HorizontalAlignment="Left" Margin="0,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="69" Width="497" FontSize="48" Background="#99FFFFFF"/>
        <TextBlock x:Name="tbError" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" Margin="26,61,0,0"/>
        <local:DebugUC x:Name="debugWindow" HorizontalAlignment="Left" Margin="290,10,0,0" VerticalAlignment="Top" Background="#00000000"/>
    </Grid>
</Window>
